datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id          Int          @id @default(autoincrement())
  username    String
  email       String       @unique
  password    String       // Store hashed password
  role        String
  score       Int          @default(0)
  submissions submission[]
}

model problem {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  score       Int
  category    String
  submissions submission[]
}

model submission {
  id        Int       @id @default(autoincrement())
  userId    Int
  problemId Int
  content   String
  user      user      @relation(fields: [userId], references: [id])
  problem   problem   @relation(fields: [problemId], references: [id])
}
